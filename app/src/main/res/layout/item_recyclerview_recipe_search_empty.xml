<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_recipe_logo_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/all_logo_gray"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recipe_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:includeFontPadding="false"
        android:text="@string/community_search_word"
        android:textAlignment="center"
        android:textAppearance="@style/Bold.Body4"
        android:textColor="@color/gray4"
        app:layout_constraintEnd_toEndOf="@id/iv_recipe_logo_gray"
        app:layout_constraintStart_toStartOf="@id/iv_recipe_logo_gray"
        app:layout_constraintTop_toBottomOf="@id/iv_recipe_logo_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>