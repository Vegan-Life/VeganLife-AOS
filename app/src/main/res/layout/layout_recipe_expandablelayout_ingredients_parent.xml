<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:background="@color/gray1">

    <TextView
        android:id="@+id/tv_recipe_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:includeFontPadding="false"
        android:text="@string/recipe_ingredients"
        android:textAppearance="@style/Bold.Body6"
        android:textColor="@color/base3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:includeFontPadding="false"
        android:text="@string/recipe_ingredients_for_one"
        android:textAppearance="@style/Regular.Body5"
        android:textColor="@color/gray4"
        app:layout_constraintStart_toEndOf="@id/tv_recipe_ingredient"
        app:layout_constraintTop_toTopOf="@id/tv_recipe_ingredient" />

</androidx.constraintlayout.widget.ConstraintLayout>