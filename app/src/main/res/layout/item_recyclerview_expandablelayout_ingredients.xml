<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_recipe_ingredients_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/recipe_ingredients_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recipe_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false"
        android:textAppearance="@style/Regular.Body5"
        android:textColor="@color/gray5"
        app:layout_constraintBottom_toBottomOf="@id/iv_recipe_ingredients_dot"
        app:layout_constraintStart_toEndOf="@id/iv_recipe_ingredients_dot"
        app:layout_constraintTop_toTopOf="@id/iv_recipe_ingredients_dot"
        tools:text="@string/recipe_ingredients_for_one" />

</androidx.constraintlayout.widget.ConstraintLayout>