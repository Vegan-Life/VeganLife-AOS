<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@color/gray1">

    <TextView
        android:id="@+id/tv_lifecheck_diet_detail_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:text="통밀빵"
        android:textAppearance="@style/Medium.Body3"
        android:textColor="@color/gray5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lifecheck_diet_detail_one_serving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:includeFontPadding="false"
        android:text="1인분(300g)"
        android:textAppearance="@style/Regular.Body7"
        android:textColor="@color/gray4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_lifecheck_diet_detail_food"
        app:layout_constraintTop_toBottomOf="@id/tv_lifecheck_diet_detail_food" />

    <TextView
        android:id="@+id/tv_lifecheck_diet_detail_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:includeFontPadding="false"
        android:text="g"
        android:textAppearance="@style/Bold.Body4"
        android:textColor="@color/base3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lifecheck_diet_detail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"
        android:text="24"
        android:textAppearance="@style/Light.Body2"
        android:textColor="@color/gray4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_lifecheck_diet_detail_unit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lifecheck_diet_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:includeFontPadding="false"
        android:text="@string/lifecheck_intake_amount"
        android:textAppearance="@style/Bold.Body4"
        android:textColor="@color/base3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_lifecheck_diet_detail_value"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>