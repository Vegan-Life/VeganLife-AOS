<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="24dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_community_detail_feed_comment_input_box_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="13dp"
        android:src="@color/sub_gray2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_community_detail_feed_comment_input_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@color/sub_gray1"
        android:drawableEnd="@drawable/community_send_message"
        android:hint="@string/community_feed_content_hint"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/civ_community_detail_feed_comment_input_box_profile"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
