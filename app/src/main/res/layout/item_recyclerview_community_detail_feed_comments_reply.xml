<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@color/gray1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_community_detail_feed_comments_reply_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="48dp"
        android:src="@color/sub_gray2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_community_detail_feed_comments_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:text="@string/all_nickname"
        android:textAppearance="@style/Bold.Body6"
        android:textColor="@color/gray5"
        app:layout_constraintStart_toEndOf="@id/civ_community_detail_feed_comments_reply_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_community_detail_feed_comments_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:includeFontPadding="false"
        android:text="@string/alarm_time"
        android:textAppearance="@style/Regular.Body7"
        android:textColor="@color/sub_gray3"
        app:layout_constraintBottom_toBottomOf="@id/tv_community_detail_feed_comments_nickname"
        app:layout_constraintStart_toEndOf="@id/tv_community_detail_feed_comments_nickname"
        app:layout_constraintTop_toTopOf="@id/tv_community_detail_feed_comments_nickname" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_community_detail_feed_comments_reply_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/selector_community_detail_feed_like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_community_detail_feed_comments_reply_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="56dp"
        android:includeFontPadding="false"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do~"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_community_detail_feed_comments_nickname"
        app:layout_constraintTop_toBottomOf="@id/tv_community_detail_feed_comments_nickname" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_community_detail_feed_comments_reply_like"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/all_like_full"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_community_detail_feed_comments_reply_description"
        app:layout_constraintTop_toBottomOf="@id/tv_community_detail_feed_comments_reply_description" />

    <TextView
        android:id="@+id/tv_community_detail_feed_comments_reply_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:includeFontPadding="false"
        android:text="00"
        android:textAppearance="@style/Regular.Body7"
        android:textColor="@color/no"
        app:layout_constraintBottom_toBottomOf="@id/iv_community_detail_feed_comments_reply_like"
        app:layout_constraintStart_toEndOf="@id/iv_community_detail_feed_comments_reply_like"
        app:layout_constraintTop_toTopOf="@id/iv_community_detail_feed_comments_reply_like" />

</androidx.constraintlayout.widget.ConstraintLayout>
