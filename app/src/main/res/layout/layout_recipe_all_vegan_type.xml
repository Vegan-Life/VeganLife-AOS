<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1">

    <TextView
        android:id="@+id/tv_recipe_all"
        style="@style/AllTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toStartOf="@id/tv_recipe_vegan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recipe_vegan"
        style="@style/VeganTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_recipe_all"
        app:layout_constraintEnd_toStartOf="@id/tv_recipe_lacto"
        app:layout_constraintStart_toEndOf="@id/tv_recipe_all"
        app:layout_constraintTop_toTopOf="@id/tv_recipe_all" />

    <TextView
        android:id="@+id/tv_recipe_lacto"
        style="@style/LactoTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_recipe_vegan"
        app:layout_constraintEnd_toStartOf="@id/tv_recipe_ovo"
        app:layout_constraintStart_toEndOf="@id/tv_recipe_vegan"
        app:layout_constraintTop_toTopOf="@id/tv_recipe_vegan" />

    <TextView
        android:id="@+id/tv_recipe_ovo"
        style="@style/OvoTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_recipe_lacto"
        app:layout_constraintEnd_toStartOf="@id/tv_recipe_lacto_ovo"
        app:layout_constraintStart_toEndOf="@id/tv_recipe_lacto"
        app:layout_constraintTop_toTopOf="@id/tv_recipe_lacto" />

    <TextView
        android:id="@+id/tv_recipe_lacto_ovo"
        style="@style/LactoOvoTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_recipe_ovo"
        app:layout_constraintEnd_toStartOf="@id/tv_recipe_pesco"
        app:layout_constraintStart_toEndOf="@id/tv_recipe_ovo"
        app:layout_constraintTop_toTopOf="@id/tv_recipe_ovo" />

    <TextView
        android:id="@+id/tv_recipe_pesco"
        style="@style/PescoTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_recipe_lacto_ovo"
        app:layout_constraintStart_toEndOf="@id/tv_recipe_lacto_ovo"
        app:layout_constraintTop_toTopOf="@id/tv_recipe_lacto_ovo" />

</androidx.constraintlayout.widget.ConstraintLayout>