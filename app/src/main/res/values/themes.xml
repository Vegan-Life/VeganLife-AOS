<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VeganLife" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.VeganLife" parent="Base.Theme.VeganLife" />

    <style name="ShapeAppearanceOverlayExtended">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">6dp</item>
    </style>

    <style name="ToolbarTheme">

        <item name="titleTextAppearance">@style/Bold.Body4</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/gray1</item>
        <item name="titleCentered">true</item>

    </style>

    <style name="AllTag">

        <item name="android:text">@string/recipe_all</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textAppearance">@style/Regular.Body5</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/all_vegan_type_pesco_background</item>

    </style>

    <style name="VeganTag">

        <item name="android:text">@string/all_vegan</item>
        <item name="android:textColor">@color/base3</item>
        <item name="android:textAppearance">@style/Regular.Body5</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/all_vegan_type_vegan_background</item>

    </style>

    <style name="LactoTag">

        <item name="android:text">@string/all_lacto</item>
