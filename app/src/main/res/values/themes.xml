        <item name="android:textAppearance">@style/Regular.Body5</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/all_vegan_type_lacto_background</item>

    </style>

    <style name="OvoTag">

        <item name="android:text">@string/all_ovo</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textAppearance">@style/Regular.Body5</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/all_vegan_type_ovo_background</item>

    </style>

    <style name="LactoOvoTag">

        <item name="android:text">@string/all_lacto_ovo</item>
